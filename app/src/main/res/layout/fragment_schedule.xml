<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALI"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/general_information_frame"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dersSaatiTextView"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/program_circle_vector"
                    android:text="11-12"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/dersKoduTextView"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="ACM431.1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/derslikVeBina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="301 / Ticari Bilimler Binasi 3. Kat"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="-57dp"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    />




            </LinearLayout>



        </LinearLayout>





    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>